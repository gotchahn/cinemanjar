- movie ||= nil

.row.justify-content-center
  = image_tag("movies.png", size: "100x100")
.row.justify-content-center
  %h1 LET'S WATCH A MOVIE!
.row.justify-content-center
  %ul.nav.nav-tabs
    - if movie
      %li.nav-item.active
        = link_to movie.title, "#", class: "nav-link active"
    %li.nav-item
      = link_to "NOW SHOWING", showing_movies_path, class: "nav-link #{action_name == "showing" ? "active" : ""}"
    %li.nav-item
      = link_to "UPCOMING MOVIES", upcoming_movies_path, class: "nav-link #{action_name == "upcoming" ? "active" : ""}"
