!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Cinemanjar
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body

    %nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      = link_to root_path, class: "navbar-brand" do
        = image_tag("logo.png", size: "200x66")
      #navbarNavAltMarkup.collapse.navbar-collapse
        .navbar-nav
          - if current_account.present?
            = link_to "DASHBOARD", account_path, class: "nav-item nav-link"
            = link_to "MOVIES", showing_movies_path, class: "nav-item nav-link"
            = link_to "FOOD", "#", class: "nav-item nav-link"
            = link_to "LOGOUT", logout_path, class: "nav-item nav-link", data: { method: :delete, "no-turbolink" => true }
          - else
            = link_to "LOGIN", login_path, class: "nav-item nav-link"
            = link_to "SIGN UP", signup_path, class: "nav-item nav-link"

    .container
      = yield

      = render "shared/credit"

    %footer.footer
      .container
        .row.justify-content-center
