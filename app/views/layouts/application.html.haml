!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Cinemanjar
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body

    %nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      = link_to "CINAMANJAR", root_path, class: "navbar-brand"
      #navbarNavAltMarkup.collapse.navbar-collapse
        .navbar-nav
          - if current_account
            = link_to "LOGIN", login_path, class: "nav-item nav-link"
            = link_to "SIGN UP", signup_path, class: "nav-item nav-link"
          - else
            = link_to "UPCOMING", upcoming_movies_path, class: "nav-item nav-link"
            = link_to "LOGOUT", logout_path, class: "nav-item nav-link", data: { method: :delete }

    .container
      = yield
